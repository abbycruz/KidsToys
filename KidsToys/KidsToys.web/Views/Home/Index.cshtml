@model List<KidsToys.BL.Producto>
@{
    ViewBag.Title = "Inicio";
}
<!-- about section -->
<!-- teacher section -->
<section class="vehicle_section layout_padding">
    <div class="container">
        <h2 class="main-heading ">
            Precios de Jugueterias
        </h2>
        <p class="text-center">
            Los mejores juguetes y mas baratos del mercado
        </p>

       
    </div>
</section>
<section class="vehicle_section layout_padding">
        <div class="row">
                @foreach (var producto in Model
                .Take(8)
                .OrderBy(r => Guid.NewGuid())
                )
            {
                <div class="col-lg-3 col-md-4  col-sm-6 ">
                    <div class="center-text mb-30">
                        <div class="card">
                            <img class="card-img-top" src="@(ViewBag.adminWebsiteUrl + producto.UrlImagen)" alt="Card image cap">
                            <div class="card-body">
                                <h4>@producto.Descripcion</h4>
                                <h6>L @producto.Precio</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>


<!-- teacher section -->
<!-- vehicle section -->
<section class="vehicle_section layout_padding">
    <div class="container">
        <h2 class="main-heading ">
            Nuestros Productos
        </h2>
       
        <p class="text-center">
            Juegos mecánicos y electrónicos, peluches, muñecos, vehículos:
            - Hasbro. - Basa • Juegos de Salón y Videojuegos.
        </p>
        <div class="layout_padding-top">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="vehicle_img-box ">
                            <img src="~/adward/images/j6.png" alt="" class="img-fluid w-100">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="vehicle_img-box ">
                            <img src="~/adward/images/j2.png" alt="" class="img-fluid w-100">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="vehicle_img-box ">
                            <img src="~/adward/images/j4.png" alt="" class="img-fluid w-100">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="vehicle_img-box ">
                            <img src="~/adward/images/kids.jpg" alt="" class="img-fluid w-100">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- vehicle section -->
<!-- client section -->
<section class="client_section layout_padding">
    <div class="container">
        <h2 class="main-heading ">
            Nuestra Ubicacion
        </h2>
        
        <p class="text-center">
            Blvd del Sur, Residencial Los Arcos
            San Pedro Sula, Departamento de Cortés, 21104
            Honduras
        </p>
    </div>
</section>


<!-- end contact section -->
<!-- admission section -->
<section class="admission_section ">
    <div class="container-fluid position-relative">
        <div class="row h-100">
            <div id="map" class="h-100 w-100 ">
            </div>
            <div class="container">
                <div class="admission_container position-absolute">


                </div>
            </div>
        </div>
    </div>
</section>
